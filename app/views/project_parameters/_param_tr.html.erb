<tr :class="klass">
  <td>
    <span v-if="klass" class="label" :class="'label-' + klass">{{label_text}}</span>
  </td>
  <td>
    <editable-div :text.sync="param.key"></editable-div>
  </td>
  <td>
    <editable-div :text.sync="param.value"></editable-div>
  </td>
  <td>
    <button v-if="!param.remove" class="btn btn-danger btn-xs"  @click="remove()">Remove</button>
    <button v-else               class="btn btn-default btn-xs" @click="unremove()">UnRemove</button>
  </td>
</tr>
