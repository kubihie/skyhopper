<%= form_for @zabbix_server, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <% if @zabbix_server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@zabbix_server.errors.count, "error") %> prohibited this zabbix_server from being saved:</h2>

      <ul>
      <% @zabbix_server.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :fqdn, class: 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <% if @zabbix_server.id == 1 %>
        <%= f.text_field :fqdn, class: 'form-control', readonly: true %>
      <% else %>
        <%= f.text_field :fqdn, class: 'form-control', required: true %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :username, class: 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_field :username, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_field :password, class: 'form-control', type: 'password', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, t('zabbix_servers.details'), class: 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_area :details, class: 'form-control' %>
    </div>
  </div>
  <div class="form-actions-top">
    <%= f.submit nil, class: 'btn btn-primary create' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")), zabbix_servers_path, class: 'btn btn-default' %>
  </div>

<% end %>
