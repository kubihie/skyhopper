<%# modal for change schedule %>
<div id="create_security_group_modal" class="modal fade" role="dialog" aria-hidden="true"
     xmlns:v-bind="http://www.w3.org/1999/xhtml">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="panel-title">Create Security Group</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label class="control-label">Security Group Name</label>
          <input class="form-control" type="text" v-model="group_name">
        </div>
        <div class="form-group">
          <label class="control-label">Description</label>
          <input class="form-control" type="text" v-model="description">
        </div>
        <div class="form-group">
          <label class="control-label">Name</label>
          <input class="form-control" type="text" v-model="name">
        </div>
        <div class="form-group">
          <label class="control-label">VPC</label>
          <select class="form-control" v-model="vpc">
            <option v-for="v in vpcs" v-bind:value="v.vpc_id">{{v.name}}</option>
          </select>
          * denotes default VPC
        </div>

        <ul class="nav nav-tabs">
          <li class="active"><a href="#inbound" data-toggle="tab" aria-expanded="true">Inbound</a></li>
          <li class=""><a href="#outbound" data-toggle="tab" aria-expanded="false">Outbound</a></li>
        </ul>
        <div id="myTabContent" class="tab-content">
          <div class="tab-pane fade active in" id="inbound">
            <table class="table table-condensed">
              <tr>
                <th>Type</th>
                <th>Protocol</th>
                <th>Range</th>
                <th>Source</th>
              </tr>
              <tr>
                <td>
                  <select class="form-control">
                    <option v-for="t in types">{{t}}</option>
                  </select>
                </td>
              </tr>
            </table>
            <button class="btn btn-xs btn-default">Add rule</button>
          </div>
          <div class="tab-pane fade" id="outbound">
            <table class="table table-condensed">
              <tr>
                <th>Type</th>
                <th>Protocol</th>
                <th>Range</th>
                <th>Source</th>
              </tr>
            </table>
            <button class="btn btn-xs btn-default">Add rule</button>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <div v-if="!loading_s">
          <button class="btn btn-default" data-dismiss="modal" aria-hidden="true"><%= t('helpers.links.cancel') %></button>
          <button @click="create_group()" data-dismiss="modal" class="btn btn-primary"><%= t('helpers.links.create') %></button>
        </div>
        <div-loader v-if="loading_s"></div-loader>
      </div>
    </div>
  </div>
</div>
