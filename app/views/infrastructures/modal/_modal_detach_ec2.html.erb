<%# modal for change schedule %>
<div id="detach-ec2-modal" class="modal" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Terminate Instance #{{physical_id}}</h4>
      </div>

      <div class="modal-body">
        <h4 class="alert alert-warning"><%= glyphicon 'warning-sign' %> Warning</h4>
        <p>
          This instance will be removed from SkyHopper service. But the instance will still be available on AWS.
        </p>
      </div>

      <div class="modal-footer">
        <div v-if="!loading_s">
          <button class="btn btn-default" data-dismiss="modal" aria-hidden="true"><%= t('helpers.links.cancel') %></button>
          <button v-on="click: detach_ec2()" data-dismiss="modal" class="btn btn-warning"><%= t('helpers.links.detach') %></button>
        </div>
        <div-loader v-if="loading_s"></div-loader>
      </div>
    </div>
  </div>
</div>
