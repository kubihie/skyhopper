<% provide(:title, I18n.t('clients.client')) %>
<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t 'clients.client' %></h1>
  <%= breadcrumbs %>
</div>

<!-- component template -->
<script id="grid-template" type="text/template"> <%= render 'vue/index' %> </script>

<!-- demo root element -->



<div id="indexElement" v-el:node>
  <div class="col-md-9">
      <input type="text" name="query" maxlength="120"  debounce="500" v-model="searchQuery" placeholder="<%= t 'infrastructures.search' %>">
  </div>

  <div class="col-md-3">
    <a class='btn btn-info btn-xs' @click="show_entry()" :class="{disabled: !picked}" ><%= t 'helpers.links.show' %></a>
    <a class="btn btn-default btn-xs" @click="edit_entry()" :class="{disabled: !can_edit()}"><span class='glyphicon glyphicon-edit'></span> <%= t 'helpers.links.edit' %></a>
    <a class="btn btn-danger btn-xs" @click="edit_entry()" :class="{disabled: !can_delete()}"><span class='glyphicon glyphicon-remove'></span> <%= t 'helpers.links.remove' %></a>
  </div>

  <demo-grid
  :data="gridData"
  :columns="gridColumns"
  :filter-key="searchQuery">
  </demo-grid>
</div>

<div  id="empty" style="display: none;"></div>
<span id="loading"><div class="loader"></div> <%= t 'common.msg.loading' %></span>
<hr>


<%= link_to(
  t('clients.btn.add'),
  new_client_path,
  class: 'btn btn-primary btn-sm'
) if current_user.admin? %>


<% content_for :sidebar do %>
<% end %>
