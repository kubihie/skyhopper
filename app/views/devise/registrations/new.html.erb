<% if User.can_sign_up? %>

  <legend>Sign up</legend>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    <% if User.count == 0 %>
      <p><%= t 'users.create_admin_user' %></p>
    <% end %>

    <div class="form-group">
      <%= f.label :email, t('users.email'), class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= f.email_field :email, {autofocus: true, class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, t('users.password'), class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= f.password_field :password, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('users.password_confirm'), class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :master, master_label, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <div class="checkbox">
        <% if User.count == 0 %>
          <%= f.check_box :master, {checked: true} %>
        <% else %>
          <%= f.check_box :master %>
        <% end %>
        </div>

      </div>
    </div>

    <div class="form-group">
      <%= f.label :admin, admin_label, class: 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <div class="checkbox">
        <% if User.count == 0 %>
          <%= f.check_box :admin, {checked: true} %>
        <% else %>
          <%= f.check_box :admin %>
        <% end %>
        </div>
      </div>
    </div>

    <div class="form-actions-top">
      <div class="col-sm-5 col-sm-offset-2">
        <%= f.submit t('helpers.links.create'), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

<% else %>
  <script type="text/javascript">
    window.location.href="/users/sign_in"
  </script>
<% end %>
